	<!--RC Car Race-->
	<ThingDef ParentName="AMP_BaseDrone" Name="AMP_RC_Base" Abstract="True">
		<description>Wheeled combat drones, designed to be cheap and disposable. Their light armor gives them a low durability but high speed. It is recommended to try to destroy them at range, as they are still exceedingly deadly up close.</description>
		<statBases>
			<MarketValue>300</MarketValue>
			<MoveSpeed>6.9</MoveSpeed>
			<ArmorRating_Sharp>1</ArmorRating_Sharp>
			<ArmorRating_Blunt>3</ArmorRating_Blunt>
			<ArmorRating_Heat>0</ArmorRating_Heat>
			<CarryWeight>100</CarryWeight>
			<CarryBulk>50</CarryBulk>
		</statBases>
		<tools>
			<li Class="CombatExtended.ToolCE">
				<label>ram</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>5</power>
				<cooldownTime>2.6</cooldownTime>
				<armorPenetrationBlunt>0.5</armorPenetrationBlunt>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup> <!--TODO correct after creating bodyparts-->
			</li>
		</tools>
		<race>
			<intelligence>ToolUser</intelligence>
			<thinkTreeMain>Mechanoid</thinkTreeMain>
			<body>MechanicalCentipede</body>  <!--TODO correct after creating bodyparts-->
			<baseBodySize>0.2</baseBodySize>
			<baseHealthScale>0.4</baseHealthScale>
			<lifeStageAges>
				<li>
					<def>AMPDroneCompleted</def>
					<minAge>0</minAge>
					<soundWounded>Pawn_Mech_Pikeman_Wounded</soundWounded>
					<soundDeath>Pawn_Mech_Pikeman_Death</soundDeath>
					<soundCall>Pawn_Mech_Pikeman_Call</soundCall>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_MechanoidBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_MechanoidBash_Miss</soundMeleeMiss>
		</race>
		<butcherProducts>
			<Steel>20</Steel>
		</butcherProducts>
	</ThingDef>

